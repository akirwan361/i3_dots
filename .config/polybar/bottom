alert             = ${xrdb:color10}

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
[bar/bottom]
monitor             = ${env:MONITOR:}
; eDP1
width               = 100%
height              = 32
fixed-center        = true

background          = ${colors.background}
foreground          = ${colors.foreground}

padding-left        = 2
padding-right       = 2
