[colors]

background        = ${xrdb:background} 
foreground        = ${xrdb:foreground}
foreground-alt    = ${xrdb:color3}
alert             = ${xrdb:color10}

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
[bar/bottom]
monitor             = ${env:MONITOR:}
; eDP1
width               = 100%
height              = 32
fixed-center        = true

background          = ${colors.background}
foreground          = ${colors.foreground}

padding-left        = 2
padding-right       = 2
module-margin-left  = 4
module-margin-right = 4

bottom              = true

font-0	            = "Fira Code:size:8,3"
;"Ubuntu Mono:size:8;3"
font-1	            = "FontAwesome:size=8;2"
font-2              = "Material Icons:size-21;4"

scroll-up           = i3wm-wsnext
scroll-down         = i3wm-wsprev
cursor-click        = pointer

modules-left        = menu i3 term
modules-right       = vpn pulseaudio-control powermenu
;term files browser settings title
;modules-center      = mpd
;modules-right       = pulseaudio

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
[module/menu]
type                    = custom/text
content                 = 
content-padding         = 2
content-background      = ${colors.background}
content-foreground      = ${colors.alert}
click-left              = exec rofi -show drun &

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/term]
