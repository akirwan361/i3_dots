; $HOME/.config/polybar/powermenu
click-right 		   = echo right
click-middle 		   = echo middle
;type                      = custom/menu

;label-open                = 
;label-close               = x
;label-separator           = " | "
;expand-right              = true
;menu-0-0                  = Power
;menu-0-0-exec             = menu-open-1
;#menu-0-1                  = Reboot
;#menu-0-1-exec             = menu-open-2
